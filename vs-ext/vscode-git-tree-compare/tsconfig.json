{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./out",
        "sourceMap": true,
		"strict": true,
		"exactOptionalPropertyTypes": false,
		"useUnknownInCatchVariables": false,
        "alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
        "noImplicitOverride": true,
		"noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*"
    ]
}
